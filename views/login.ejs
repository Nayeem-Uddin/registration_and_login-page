<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">Welcome to Uthshorgo Foundation</h1>
        <%- include ('partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="phone">Phone No </label>
            <input
              type="phone"
              id="phone"
              name="phone"
              class="form-control"
              placeholder="Enter Your Phone Number"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login to show where and when need blood</button><br>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register yourself as a Proud Donor</a>
        </p>
      </div>
    </div>
  </div>